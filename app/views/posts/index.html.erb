<% @posts.each do |post| %>
  <div class="container">
    <%= image_tag post.picture.url if post.picture? %>
    <div class="row">
      <div class="col-sm-3 col-sm-offset-3">
        <%= link_to "編集する", edit_post_path(post), class: "btn btn-warning"%>
      </div>
      <div class="col-sm-3">
        <%= link_to "削除する", post_path(post), method: :delete, class: "btn btn-danger"%>
      </div>
      <div class="col-sm-3">
        <p><%= post.content %></p>
      </div>
    </div>
  </div>
<% end %>
